{% extends 'base.html.twig' %}

{% block title %} Login title {% endblock %}

{% block body %}
 <div>
    <h1>login page!</h1>

     {% if error %}
         <span>{{ error.messageKey }}</span>
     {% endif %}

    <form action="{{ path('login') }}" method="POST">
        <input type="text" name="_username" value="{{ last_username }}" placeholder="Username/e-mail">

        <input type="password" name="_password" placeholder="Password">


        <button type="submit">Login</button>

    </form>
</div>

{% endblock %}