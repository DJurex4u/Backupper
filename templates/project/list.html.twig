{% extends 'base.html.twig' %}

{% block title %}Project List Articles{% endblock %}

{% block body %}
    {% if projects %}
        <table id="projects" class="table table-striped">
            <thead>
            <tr>
                <th>Projects</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{ project.name }}</td>
                    <td>
                        <a href="{{ path('project_read', {id: project.id}) }}" class="btn btn-dark">Show</a>
                        <a href="{{ path('project_update', {id: project.id}) }}" class="btn btn-light">Edit</a>
                        <a href="{{ path('project_list') }}" class="btn btn-danger delete-project" data-id="{{ project.id }}">Delete</a>  {# {{ path('project_delete', {id: project.id}) }} #}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No projects to display</p>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="/js/deleteFromTable.js"></script>
{% endblock %}
